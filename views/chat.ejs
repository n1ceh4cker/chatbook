<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <title>Chatbook Chat</title>
</head>
<body>
  <div class="container">
    <header class="header">
      <div class="flex">
        <a href="/"><i class="fa fa-arrow-left" style="color: #ffffff; padding-right: 5px;"></i></a>
        <h3 id="to_name"><%= to.name %></h3>
      </div>
      <div>
        <a href=#><i class="fa fa-video-camera" style="color: #ffffff;"></i></a>
      </div>
    </header>
    <main>
      <div class="chat-messages">
        <% chatbox.messages.forEach(message =>{ %>
          <% if(message.sender === from.email ){ %>
            <div class="message sent">
              <p class="text"><%=message.message%></p>  
              <p class="meta">You <span><%=moment(message.date).format('hh:mm a')%></span></p>
            </div>
          <%  }else if(message.sender === to.email){ %>
            <div class="message recieved">
              <p class="text"><%=message.message%></p>
              <p class="meta"><%=to.name%> <span><%=moment(message.date).format('hh:mm a')%></span></p>
            </div>
          <% } %>
        <% }) %>
      </div>
      <div class="chat-form-container">
        <form id="chat-form" method="POST">
          <input
            id="msg"
            type="text"
            placeholder="Enter Message"
            required
            autocomplete="off"
          />
          <button class="btn"><i class="fa fa-paper-plane"></i> Send</button>
        </form>
      </div>
    </main>
  </div>
      <p id="to" style="display: none;"><%= to.email %></p>
      <p id="from" style="display: none;"><%= from.email %></p>
      <p id="chatbox" style="display: none;"><%=chatbox.id%></p>
  <script type="text/javascript" src="/socket.io/socket.io.js" ></script>
  <script type="text/javascript" src="/js/main.js"></script>
    
</body>
</html>